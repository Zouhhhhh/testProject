<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.RoleMapper">

    <insert id="insertRole" parameterType="role">
        INSERT INTO role (role_name, note) values(#{roleName}, #{note})
    </insert>

    <delete id="deleteRole" parameterType="long">
        DELETE FROM role WHERE id = #{id}
    </delete>

    <update id="updateRole" parameterType="role">
        UPDATE role SET role_name = #{roleName}, note = #{note} WHERE id = #{id}
    </update>

    <select id="getRole" parameterType="long" resultType="role">
        SELECT id, role_name AS roleName, note FROM role WHERE id = #{id}
    </select>

    <select id="findRole" parameterType="string" resultType="role">
        SELECT id, role_name AS roleName, note FROM role
        WHERE role_name LIKE CONCAT('%', #{roleName}, '%')
    </select>


</mapper>